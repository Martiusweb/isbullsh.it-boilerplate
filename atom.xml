---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
 
 <title>isBullsh.it</title>
 <subtitle>We troll because we're right</subtitle>
 <link href="http://isbulsh.it" rel="self"/>
 <link href="http://isbulsh.it"/>
 <updated>{{ site.time | date_to_xmlschema }}</updated>
 <id>http://isbullsh.it/</id>

 {% for post in site.posts %}
 <entry>
   <title>{{ post.title }}</title>
   <link href="http://0.0.0.0:4000{{ post.url }}"/>
   <updated>{{ post.date | date_to_xmlschema }}</updated>
   <id>http://recursive-design.com{{ post.id }}</id>
   <author>
     <name>by {{post.byline}}</name>
   </author>
   <content type="html">{{ post.content | xml_escape }}</content>
   <category {% for tag in post.tags %}term="{{tag}}" {% endfor %}/> 
 </entry>
 {% endfor %}
 
</feed>
